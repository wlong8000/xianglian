<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical">

    <include layout="@layout/dialog_title_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.wl.lianba.wheel.widget.WheelView
                android:id="@+id/province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#3316ac3a"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="16sp" />

        </FrameLayout>


        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dddddd" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.wl.lianba.wheel.widget.WheelView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#3316ac3a"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="16sp" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            style="@style/Button_DialogConfirmNew"
            android:background="@drawable/btn_dialog_left"
            android:text="@string/cancel"
            android:textColor="@drawable/text_gray_blue" />

        <ImageView
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="#dddddd" />

        <Button
            android:id="@+id/confirm"
            style="@style/Button_DialogConfirmNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_right"
            android:text="@string/confirm"
            android:textColor="@drawable/text_blue_gray" />
    </LinearLayout>

</LinearLayout>