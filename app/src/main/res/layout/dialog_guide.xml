<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical">

    <include layout="@layout/dialog_title_line" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:padding="12dp"
        android:text="@string/write_message"
        android:textColor="@drawable/text_gray_blue" />


    <View style="@style/lib_style_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            style="@style/Button_DialogConfirmNew"
            android:background="@drawable/btn_dialog_left"
            android:text="@string/cancel"
            android:textColor="@drawable/text_gray_blue" />
    </LinearLayout>

</LinearLayout>