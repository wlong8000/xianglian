<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_dialog_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/grey51"
            style="@style/Button_DialogConfirmNew"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#dddddd"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                style="@style/Button_DialogConfirmNew"
                android:background="@drawable/btn_dialog_left"
                android:text="@string/cancel"
                android:textColor="@drawable/text_gray_blue"/>

            <ImageView
                android:layout_width="0.5dip"
                android:layout_height="match_parent"
                android:background="#dddddd"/>

            <Button
                android:id="@+id/confirm"
                style="@style/Button_DialogConfirmNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog_right"
                android:text="@string/confirm"
                android:textColor="@drawable/text_blue_gray"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>