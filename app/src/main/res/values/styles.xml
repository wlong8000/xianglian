        <item name="android:textColor">@color/lib_color_bg1</item>
    </style>

    <style name="lib_style_edit_login" parent="lib_style_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/lib_transparent</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">15</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/lib_font_size3</item>
        <item name="android:textColor">@color/lib_color_font2</item>
        <item name="android:textColorHint">@color/lib_color_font5</item>
    </style>

    <style name="lib_style_edit_password" parent="lib_style_edit_login">
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">16</item>
        <item name="android:textSize">@dimen/lib_font_size4</item>
